{
  "name": "breaker-panel-helper",
  "version": "1.0.0",
  "description": "Comprehensive electrical panel breaker management system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest tests/api.test.js",
    "test:integration": "jest tests/integration.test.js",
    "test:frontend": "jest tests/frontend.test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "add-test-data": "node test-data.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^9.36.0",
    "jest": "^29.7.0",
    "jsdom": "^22.1.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "electrical",
    "panel",
    "breaker",
    "circuit",
    "management",
    "home",
    "automation",
    "sqlite"
  ],
  "author": "Assistant",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server.js",
      "public/*.js",
      "!node_modules/**",
      "!tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "semi": ["error", "always"],
      "quotes": ["error", "single", { "allowTemplateLiterals": true }]
    },
    "globals": {
      "ApiClient": "readonly",
      "PanelRenderer": "readonly",
      "CircuitListManager": "readonly",
      "BreakerPanelApp": "readonly"
    }
  }
}